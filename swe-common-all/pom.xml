<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.vast.opengis</groupId>
  <artifactId>swe-common-all</artifactId>
  <version>1.0</version>
  <packaging>pom</packaging>
  <name>SWE Common Data Framework</name>
  <url>https://github.com/sensiasoft/lib-swe-common/tree/master/swe-common-all</url>
  <description>Java bindings and associated data components for the SWE Common Data Model language</description>
  <licenses>
    <license>
      <name>Mozilla Public License Version 1.1</name>
      <url>http://www.mozilla.org/MPL/1.1/</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <organization>
     <name>VAST Team / Sensia Software LLC</name>
     <url>http://www.sensiasoftware.com</url>
  </organization>
  <developers>
    <developer>
      <id>alex.robin</id>
      <name>Alexandre Robin</name>
      <email>nospam@mydomain.com</email>
    </developer>
  </developers>
  <scm>
     <url>https://github.com/sensiasoft/lib-swe-common/tree/master/swe-common-all</url>
     <tag>master</tag>
  </scm>
  <issueManagement>
     <system>GitHub</system>
     <url>https://github.com/sensiasoft/lib-swe-common/issues</url>
  </issueManagement>
  <modules>
     <module>../swe-common-core</module>
     <module>../swe-common-om</module>
     <module>../swe-common-video</module>
  </modules>
  <dependencies>
     <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.11</version>
        <scope>test</scope>
     </dependency>
     <dependency>
        <groupId>commons-logging</groupId>
        <artifactId>commons-logging</artifactId>
        <version>1.1.3</version>
     </dependency>
     <dependency>
        <groupId>xmlunit</groupId>
        <artifactId>xmlunit</artifactId>
        <version>1.5</version>
        <scope>test</scope>
     </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9.1</version>
        <configuration>
            <show>public</show>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>